<% include ../partials/header%>
<div class="container">
<div class="text-center text-danger shippingCost bottomGutter">
  <h3>Don't Let these deals slither away!</h3>
  <sub>There is an automatic $25.00 shipping added to every order.</sub>
</div>

  <div class="row text-center text-light font1">
    <% snakes.forEach(function(snakes){ %>
      <div class="col-md-4 col-sm-6 flex bottomGutter">
          <div class="card bg-dark" style="width: 100%; height: 100%;">
            <div class="card-body">
              <p><%=snakes.type%></p>
              <img class="card-img-top text-danger" src="<%=snakes.image%>">
              <p class="card-text "><%= snakes.discrip%></p>
              <p>Price: $<%=snakes.price%></p>
              <a class="ui button attached bottom black centered"href="/snake/<%=snakes._id%>">View Me</a>
            </div>
          </div>
      </div>
      <% }); %>
  </div>
</div>
<% include ../partials/footer%>