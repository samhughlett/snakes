<%  include ../partials/header %>
<div class="card-body">
    <div class="ui centered big header test">
        <%=snakes.type%>
    </div>

    <div class="ui main text container big inverted segment">
    <div class="item">
        <img class="ui centered rounded image" src="<%=snakes.image%>">
    </div>
    <div class="price">Price per snake: $<%=snakes.price%></div>
    <div class="content">
        <p><%=snakes.discrip%></p>
        <p>We currently have: <%=snakes.inventory%> left.</p>
        <p>
            <form  action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
                <input type="hidden" name="cmd" value="_xclick">
                <input type="hidden" name="business" value="youremailhere@here.com">
                <input type="hidden" name="lc" value="US">
                <input type="hidden" name="item_name" value="<%=snakes.type%>">
                <input type="hidden" name="amount" value="<%=snakes.price%>">
                <input type="hidden" name="currency_code" value="USD">
                <input type="hidden" name="button_subtype" value="services">
                <input type="hidden" name="no_note" value="0">
                <input type="hidden" name="shipping" value="25.00">
                <input type="hidden" name="bn" value="PP-BuyNowBF:btn_buynowCC_LG.gif:NonHosted">
                <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_buynowCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!">
                <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1">
            </form>
 
        </p>
    </div>
   
</div>
</div>
</div>
<%  include ../partials/footer %>