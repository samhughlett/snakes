<% include ../partials/header %>

<div class="container">
    <div class="container text-center">
        <h1>Sign Up</h1>
        <div class="row">
            <form class="form-signin text-center" action="/signup" method="POST">
              <div class="form-label-group">
                <label for="inputUsername">Username</label>
                <input class ="form-control" type="text" name="username" placeholder="Username"  required>              
                </div> 
                <div class="form-label-group">
                <label for="inputEmail">Email</label>
                <input class ="form-control" type="text" name="email" placeholder="Snakes@slither.com"  required>              
                </div>
              <div class="form-label-group">
                <label for="inputPassword">Password</label>
                <input class ="form-control" type="password" name="password" placeholder="Password"  required>
              </div>
            <div class="form-label-group">
                <input class ="form-control" type="checkbox" name="isAdmin" value="false" checked hidden>
              </div>
              
              <button class="btn btn-lg btn-secondary btn-dark btn-block" type="submit">Sign in</button>
            </form>
            
        </div>
    </div>
</div>
<% include ../partials/footer %>